generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  cars Car[]
}

model Car{
  id Int @id @default(autoincrement())
  title String
  description String
  userId Int
  images Image[]
  user User @relation(fields: [userId], references: [id])
  tags Tag[]
}

model Image{
  id Int @id @default(autoincrement())
  url String @unique
  carId Int
  car Car @relation(fields: [carId], references: [id])
}

model Tag{
  id Int @id @default(autoincrement())
  name String @unique
  cars Car[]
}